# ─── Application ──────────────────────────────────────────────────────────────
APP_ENV=development
SECRET_KEY=change-me-in-production
DEBUG=true

# ─── PostgreSQL (pgvector) ────────────────────────────────────────────────────
POSTGRES_USER=fnds_user
POSTGRES_PASSWORD=fnds_password
POSTGRES_DB=fnds_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Async SQLAlchemy DSN
DATABASE_URL=postgresql+asyncpg://fnds_user:fnds_password@db:5432/fnds_db

# ─── Redis ────────────────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ─── Celery ───────────────────────────────────────────────────────────────────
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ─── ML Engine ────────────────────────────────────────────────────────────────
EMBEDDING_DIM=768
ML_MODEL_PATH=ml_engine/models/
